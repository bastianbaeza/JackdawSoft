# Configuración de la Base de Datos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=jackdaws_db
DB_USER=postgres
DB_PASSWORD=your_db_password

# Variables de entorno alternativas (para compatibilidad)
HOST=localhost
DATABASE=jackdaws_db
DB_USERNAME=postgres
PASSWORD=your_db_password

# JWT y Autenticación
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
ACCESS_TOKEN_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# Configuración del Servidor
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Superadministrador por defecto
DEFAULT_SUPERADMIN_EMAIL=superadmin@jackdaws.local
DEFAULT_SUPERADMIN_PASSWORD=SuperAdmin123!

# Configuración de Seguridad de Contraseñas
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true

# Configuración de Intentos de Login
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=1800000

# Configuración de Sesiones
JWT_EXPIRATION=8h
SESSION_TIMEOUT=28800000

# Configuración de Tokens de Activación
ACTIVATION_TOKEN_EXPIRATION=172800000

# Configuración de Reset de Contraseñas
PASSWORD_RESET_EXPIRATION=3600000

# Configuración de Email
CORREO=your-email@company.com
CONTRASENA=your-email-password
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Configuración de Cookies
cookieKey=your-cookie-secret-key

# Configuración de Logging
LOG_LEVEL=info
ENABLE_AUDIT_LOG=true
